{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/health",
      "destination": "/api/index.cjs"
    }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/index.cjs",
      "use": "@vercel/node"
    },
    {
      "src": "api/sync.cjs",
      "use": "@vercel/node"
    }
  ],
  "crons": [
    {
      "path": "/api/sync.cjs",
      "schedule": "* * * * *"
    }
  ]
}
